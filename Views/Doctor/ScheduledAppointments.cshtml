@model DoctorAppointmentSystem.ViewModels.RequestsViewModel
@using DoctorAppointmentSystem.Models
@{
    ViewBag.Title = "Scheduled";
}

<h2>Scheduled Appointments</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Patient</th>
            <th scope="col">Slot</th>
            @*<th scope="col">Available Till</th>*@
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
            foreach (var req in Model.Appointments)
            {
                <tr>
                    <th scope="row">@count@{count++;}</th>
                    <td>@req.ApplicationUser.Name</td>
                    <td>@req.Slot.AvailableFrom - @req.Slot.AvailableTill</td>
                    @*<td></td>*@
                    <td>@req.Status</td>
                    @if (req.Status == AppointmentStatus.Approved)
                    {
                        <td><a href="/Doctor/WritePrescription?id=@req.ApplicationUserId" class="btn btn-primary">Write Prescription</a></td>
                    }
                    else
                    {
                        
                    }
                </tr>
            }
        }
    </tbody>
</table>
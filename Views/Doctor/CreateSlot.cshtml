@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "CreateSlot";
}

<h2>CreateSlot</h2>
<form action="/Doctor/CreateSlot" method="post">
    <div class="form-group">
        <label for="AvailableFrom">Available From</label>
        <input type="datetime-local" class="form-control" id="AvailableFrom" name="AvailableFrom" placeholder="Available From">
    </div>
    <div class="form-group">
        <label for="AvailableTill">Available From</label>
        <input type="datetime-local" class="form-control" id="AvailableTill" name="AvailableTill" placeholder="Available Till">
    </div>
    <input id="ApplicationUserId" name="ApplicationUserId" type="text" value="@User.Identity.GetUserId()" hidden>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


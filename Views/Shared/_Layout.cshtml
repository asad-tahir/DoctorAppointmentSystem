<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Doctor Appointment System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="min-height:100vh;position:relative;">
    @Html.Partial("_Navbar")
    <div class="container">
        <div style="padding-bottom: 5.5rem;">
            @RenderBody()
        </div>
        <footer style="position: absolute; bottom: 0; width:100%; left:0 ">
            <hr />
            <p style="padding-left:25px;">&copy; @DateTime.Now.Year - Doctor Appointment System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)

</body>
</html>
